@model List<Image>
@{
    ViewBag.Title = "Home Page";
}

<div class="header-banner">
    <div class="wrap">
        <div class="banner">
            <div class="indent">
                <h2 class="indent-left margin-bot">Seyahatlerinizi Planlayın</h2>
                <div class="banner-left">
                    <div class="con-text">
                        <div class="grid1-img">
                            <img src="~/web/images/glass.png" alt="">
                        </div>
                        <div class="grid1-desc">
                            <p>Restaurantlar</p>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="con-text">
                        <div class="grid1-img">
                            <img src="~/web/images/flight.png" alt="">
                        </div>
                        <div class="grid1-desc">
                            <p>Uçuşlar</p>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="con-text">
                        <div class="grid1-img">
                            <img src="~/web/images/group.png" alt="">
                        </div>
                        <div class="grid1-desc">
                            <p>Yapılacaklar</p>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="con-text">
                        <div class="grid1-img">
                            <img src="~/web/images/key.png" alt="">
                        </div>
                        <div class="grid1-desc">
                            <p>Araç Kiralama</p>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="clear"></div>
                </div>
                <div class="header_bottom_right_images">

                    <div class="slider">
                        <ul class="rslides" id="slider1">
                            @foreach (var item in Model)
                            {
                                <li><img src="@item.PhotoUrl" alt="" style="width:650px; height: 425px;"></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
            <div class="clear"></div>
        </div>
        <div class="clear"></div>
    </div>
</div>
<div class"content">
    <div class="wrap">
        <div class="wrapper">
            <div class="con-top">
                <h1 style="font-size: 30px; color: #a2365a; font-family:Century Gothic,Helvetica,sans-serif; margin-bottom:15px;">Seyahat Bloğuma Hoşgeldiniz!</h1>
                <p>Bu blog seyahat etmeyi sevenler için hazırlanmış bilgilendirici bir sayfadır. Okurların geri dönüşleri bu sayfanın gelişimi için çok önemli olacaktır. Görmek istediğiniz veya bilgi almak istediğiniz yerleri iletişim sayfamızdan veya blogların altındaki yorum yap kısmından yazarak bizimle paylaşırsanız seyahat planlaması yapılacaktır. </p>
            </div>
            @Html.Action("HomeBlogs","Home")
            <div class="grids">
                <div class="box1">
                    @Html.Action("TopWeekBlog", "Home")
                    @Html.Action("BestPlacesLeft", "Home")
                    <div class="clear"></div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Slide{
    <script>
        // You can also use "$(window).load(function() {"
        $(function () {
            // Slideshow 1
            $("#slider1").responsiveSlides({
                auto: true,
                nav: true,
                speed: 500,
                namespace: "callbacks",
            });
        });
    </script>
}