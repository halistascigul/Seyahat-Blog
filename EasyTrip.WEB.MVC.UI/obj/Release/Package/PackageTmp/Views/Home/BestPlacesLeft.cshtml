@model List<Blog>
<div class="padding1">
    <h4>En Beğendiğim Yerler</h4>
    <div class="box-left">
        @foreach (var item in Model)
        {
            <div class="bot-img">
                <img src="@item.Images[0].PhotoUrl" style="width:120px; height:65px" alt="" />
            </div>
            <div class="bot-desc">
                <p>@item.Content.Substring(0,150)...</p>
            </div>
            <div class="clear"></div>
        }

    </div>
    @Html.Action("BestPlacesRight", "Home")
</div>
