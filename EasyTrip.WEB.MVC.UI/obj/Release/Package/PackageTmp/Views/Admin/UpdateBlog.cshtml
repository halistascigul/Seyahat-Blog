@model Blog
@{
    ViewBag.Title = "UpdateBlog";
    Layout = "~/Views/Admin/_adminLayout.cshtml";
}

<div>
    <h2>UpdateBlog</h2>
    @if (TempData["UpdateBlog"] != null)
    {
        if ((bool)TempData["UpdateBlog"] == true)
        {
            <h4>
                Blog güncelleme <span class="text-success">BAŞARILI</span>
            </h4>
        }
        else
        {
            <h4>Blog güncelleme <span class="text-danger">BAŞARISIZ!!!</span></h4>
        }
    }
    @using (Html.BeginForm("UpdateBlog", "Admin", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.LabelFor(x => x.Id)
        @Html.TextBoxFor(x => x.Id, new { @class = "form-control", @readonly="readonly=false" })
        <br />
        @Html.LabelFor(x => x.Title)
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.Content)
        @Html.TextAreaFor(x => x.Content,10,1, new { @class = "form-control" })
        <br />
        <input class="btn btn-success form-control text-white mt-2" type="submit" name="Submit" value="GÜNCELLE" />
    }
</div>

