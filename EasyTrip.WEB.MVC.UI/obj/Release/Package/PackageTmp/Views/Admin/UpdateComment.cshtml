@model Comment
@{
    ViewBag.Title = "UpdateComment";
    Layout = "~/Views/Admin/_adminLayout.cshtml";
}

<div class="container">
    <h2>Yorum Güncelleme</h2>
    @using (Html.BeginForm("UpdateComment", "Admin", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.LabelFor(x => x.Id)
        @Html.TextBoxFor(x => x.Id, new { @class = "form-control", @readonly = "readonly=false" })
        <br />
        @Html.LabelFor(x => x.Text)
        @Html.TextAreaFor(x => x.Text, new { @class = "form-control" })
        <br />
        <input class="btn btn-success form-control text-white mt-2" type="submit" name="Submit" value="GÜNCELLE" />
    }
</div>

