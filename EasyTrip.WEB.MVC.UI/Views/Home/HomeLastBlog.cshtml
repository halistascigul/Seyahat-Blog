@model List<Blog>
@foreach (var item in Model)
{
    <div class="right">
        <div class="bot-left">
            <img src="@item.Images[0].PhotoUrl" style="width:300px; height:160px" alt="" />
        </div>
        <div class="left-text">

            <h4>@item.Title</h4>
            <span class="doller">@item.Created.ToString("dd.MM.yyyy")</span>
            <p>@item.Content.Substring(0,200)</p>
            <p><a href="@Url.Action("SingleBlog","Blog", new { blogId = item.Id })"><span class="read">Devamı >></span></a></p>
        </div>
    </div>
}

