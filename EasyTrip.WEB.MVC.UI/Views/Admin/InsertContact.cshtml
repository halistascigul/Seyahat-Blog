@model Contact
@{
    ViewBag.Title = "InsertContact";
    Layout = "~/Views/Admin/_adminLayout.cshtml";
}

<div class="container">
    <h2 class="text-center" style="margin-top:20px;">Yeni İletişim Ekleme</h2>
    <div class="form">
        <form class="form-group" method="post">
            @Html.LabelFor(x => x.FullName)
            @Html.TextBoxFor(x => x.FullName, new { @class = "form-control" })
            <br />
            @Html.LabelFor(x => x.Email)
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
            <br />
            @Html.LabelFor(x => x.Message)
            @Html.TextAreaFor(x => x.Message, new { @class = "form-control" })
            <br />
            <input class="btn btn-success" type="submit" name="" value="Ekle" />
        </form>
    </div>
</div>

