@model List<Blog>
@{
    ViewBag.Title = "Index";
}
<head>
    <title>Kişisel Seyahat Blogum</title>
    <link href="~/SingleWeb/css/bootstrap.css" rel='stylesheet' type='text/css' />
    <link href="~/SingleWeb/css/style.css" rel='stylesheet' type='text/css' />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Personal Travel Blog" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!----webfonts---->
    <link href='http://fonts.googleapis.com/css?family=Oswald:100,400,300,700' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900,300italic' rel='stylesheet' type='text/css'>
    <!----//webfonts---->
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <!--end slider -->
    <!--script-->
    <script type="text/javascript" src="~/SingleWeb/js/move-top.js"></script>
    <script type="text/javascript" src="~/SingleWeb/js/easing.js"></script>
    <!--/script-->
    <script type="text/javascript">
        jQuery(document).ready(function ($) {
            $(".scroll").click(function (event) {
                event.preventDefault();
                $('html,body').animate({ scrollTop: $(this.hash).offset().top }, 900);
            });
        });
    </script>
    <!---->

</head>
<div class="single">
    <div class="container">
        <div class="col-md-8 single-main">
            @foreach (var item in Model)
            {
                <div class="single-grid">
                    <a href="@Url.Action("SingleBlog","Blog", new { blogId=item.Id})"><img src="@item.Images[0].PhotoUrl" alt="@item.Title" /></a>
                    <p>
                        @item.Content.Substring(0, 200)
                    </p>
                </div>
            }
        </div>

        <div class="col-md-4 side-content">
            <div class="recent">
                <h3>SON BLOGLARIM</h3>
                <ul>
                    @foreach (var item in Model)
                    {
                        <li><a href="@Url.Action("SingleBlog","Blog", new { blogId=item.Id })">@item.Title</a></li>
                    }
                </ul>
            </div>
            <div class="comments">
                <h3>SON YORUMLAR</h3>
                <ul>
                    @foreach (var item in Model)
                    {
                        <li><a href="#">Amada Doe </a> on <a href="#">Hello World!</a></li>
                    }
                </ul>
            </div>
            <div class="clearfix"></div>
            <div class="clearfix"></div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>

